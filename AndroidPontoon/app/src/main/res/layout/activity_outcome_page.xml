<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:padding="10dp"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/blackjack"
            android:layout_alignParentLeft="true"
            />

    </LinearLayout>


    <ImageView
        android:layout_marginLeft="7dp"
        android:layout_width="324dp"
        android:layout_height="361dp"
        android:src="@drawable/spadespace_01"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.43"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:gravity="center" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:orientation="vertical"
                              android:gravity="center"
                      android:layout_height="wrap_content"
                              android:layout_width="wrap_content"
>
            <ImageView
                android:id="@+id/player_hand_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/player_hand_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/player_hand_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/player_hand_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/player_hand_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
            >

            <TextView
                android:id="@+id/player_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU"/>/>

            </LinearLayout>

        <Button
            android:id="@+id/restart_button"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:background="@drawable/playbutton_01"
            android:textColor="@color/colorMainText"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
            >

            <TextView
                android:id="@+id/dealer_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMP"/>/>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
            >
            <ImageView
                android:id="@+id/dealer_hand_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/dealer_hand_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/dealer_hand_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/dealer_hand_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <ImageView
                android:id="@+id/dealer_hand_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/win_count"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wins:"/>

</LinearLayout>