<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/secondpage_01"
              android:textColor="@color/colorMainText"
              android:gravity="center_horizontal"
              android:padding="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:gravity="start"
                  android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:layout_marginTop="0dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/blackjack"
        />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/player_hand_1"
            android:layout_width="100dp"
            android:layout_height="100dp"

            />
        <ImageView
            android:id="@+id/player_hand_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/player_hand_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <ImageView
            android:id="@+id/player_hand_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <ImageView
            android:id="@+id/player_hand_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/bet_view"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Place your bet!"/>

            <TextView
                android:id="@+id/bet_amount_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginBottom="-25dp"
                android:text=""/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="5"/>

                <SeekBar
                    android:id="@+id/bet_amount_seek"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:max="95"
                    android:progress="5"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="100"/>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:orientation="vertical"
                              android:gravity="center"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your funds:"/>

                    <TextView
                        android:id="@+id/funds"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:textSize="40dp"
                        android:text=""/>

                </LinearLayout>

                <Button
                    android:id="@+id/bet_button"
                    android:layout_width="140dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/colorMainText"
                    android:background="@drawable/playbutton_01"
                    />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:orientation="vertical"
                              android:gravity="center"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                    >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hole card:"/>

                <ImageView
                    android:id="@+id/hole_card"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    />

                    </LinearLayout>
</LinearLayout>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/play_view"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/twist_button"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/colorMainText"
                android:background="@drawable/twistbutton_01"
                />

            <Button
                android:id="@+id/stick_button"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:textColor="@color/colorMainText"
                android:background="@drawable/stick_01"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/main_text"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@color/colorBodyText"
        android:background="#00ffffff"
        />

    <TextView
        android:id="@+id/dealer_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="@color/colorBodyText"
        android:background="#00ffffff"/>

</LinearLayout>
